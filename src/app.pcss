@tailwind base;
@tailwind components;
@tailwind utilities;

body,
html {
	@apply bg-slate-200 dark:bg-slate-900;
}

p {
	@apply text-gray-800 dark:text-gray-200;
}
h1,
h2,
h3,
h4,
h5,
h6 {
	@apply text-gray-900 dark:text-gray-100;
}
a {
	@apply text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-600;
}

button {
	@apply bg-sky-400 text-gray-900 font-bold py-2 px-4 rounded hover:bg-sky-500;
}

button.danger {
	@apply bg-red-400 hover:bg-red-500;
}
